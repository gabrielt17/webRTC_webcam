{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build src/offer.cpp",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "src/offer.cpp",
                "-o",
                "src/offer",
                "$(shell pkg-config --cflags opencv4 libdatachannel)",
                "$(shell pkg-config --libs opencv4 libdatachannel)",
                "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated for compiling src/offer.cpp with OpenCV and libdatachannel."
        }
    ],
    "version": "2.0.0"
}
